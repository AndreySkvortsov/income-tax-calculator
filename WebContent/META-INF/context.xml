<Context>
	<Resource name="jdbc/income_tax_calculator"
		auth="Container"
		type="javax.sql.DataSource"
		maxActive="20"
		maxIdle="10"
		maxWait="10000"
		validationQuery="SELECT 1 as dbcp_connection_test"
        testOnBorrow="true"
        testOnReturn="true"
        testWhileIdle="true"
		username="calculator"
		password="calculator"
		driverClassName="com.mysql.jdbc.Driver"
		factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
		url="jdbc:mysql://localhost:3306/income_tax_calculator?useSSL=false" />
</Context>